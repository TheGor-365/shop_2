<h2>All items</h2>

<% if !@items.empty? %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Real</th>
      <th scope="col">Description</th>
      <th scope="col">Rating</th>
      <th scope="col">Image</th>
      <th scope="col" colspan="2">Pan</th>
    </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr data-item_id="<%= item.id %>">
        <td><%= item.id %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.real %></td>
        <td><%= item.description %></td>
        <td><%= item.votes_count %> <%= link_to '+', upvote_item_path(item) %></td>
        <td><%= !item.image.nil? ? image_tag(item.image.file, width: '30px', height: '30px') : 'No img' %></td>
        <td><%= button_to 'Delete', item_path(item), method: :delete, class: 'deleteAction' %></td>
        <td><%= button_to 'Edit', edit_item_path(item), method: :get %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to 'New item', new_item_path, method: :get %>
  <%= button_to 'Only expensive', expensive_items_path, method: :get %>
  <%= button_to 'All items', items_path, method: :get %>
  <%= button_to 'Admin panel', admin_users_count_path, method: :get %>
<% else %>
  <h2>NO items</h2>
  <%= button_to 'New item', new_item_path, method: :get %>
<% end %>

<%= render :partial => 'shared/email' %>


