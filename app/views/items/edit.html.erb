<h2>Edit item <%= @item.name %></h2>

<%= form_tag item_path(@item), method: :put do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, @item.name %>
  <%= label_tag :price %>
  <%= text_field_tag :price, @item.price %>
  <%= label_tag :description %>
  <%= text_area_tag :description, @item.description %>

  <%= submit_tag 'Update', class: 'btn btn-primary btn-sm' %>

<% end %>

<%= render :partial => 'shared/email' %>